<!doctype html>
<html>
<head>
    <title>Spike Jones Database</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <style>
        .dbEntryImg  { display: block; width: 96%; margin: 2%;}
        .imgContain{ width: 100%; max-height: 250px; min-height: 250px;}
    </style>
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-database"></span> Spike Jones Databse</h1>
        <a href="/logout" class="btn btn-default btn-sm"><span class="fa fa-sign-out"></span> Close Session</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Audio</a></li>
        <li role="presentation"><a href="#">Video</a></li>
        <li role="presentation"><a href="#">Images</a></li>
        <li role="presentation"><a href="#">Sheet Music</a></li>
      </ul>
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <div class="col-xs-6">
            <select class="form-control">
              <option>Year</option>
              <option>Guest Artist</option>
              <option>Medium</option>
              <option>Name</option>
            </select>
          </div>
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="Search">
          </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div><!-- /.navbar-collapse -->

    <div class="row">
      <% for(var i=0; i < data.data.length; i++) { %>
        <div class="dbEntry col-xs-6 col-sm-4 col-lg-3">
          <div class="well">
            <figure class="imgContain">
              <img class="dbEntryImg" src="<%= data.data[i].pic %>" alt="<%= data.data[i].author %>">
            </figure>
            <strong><%= data.data[i].author %></strong>
            <p><%= data.data[i].quote %></p>
            <button class="btn btn-primary">Edit</button>
          </div>
        </div>
      <% } %>
    </div>

</div>
</body>
</html>
